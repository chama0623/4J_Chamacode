<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<script src="deleteCheck.js"></script>

<span class="row mx-2">
<h2><font color="#7cfc00"><%= @a %> </font>'s article page.</h2>
</span>

<div class="text-right mr-5" >
<a class="btn btn-success" data-toggle="collapse" href="/newarticle" role="button" aria-expanded="false" aria-controls="collapseExample">
New Article
</a>
</div>

<a class="btn btn-link" data-toggle="collapse" href="/contentspage" role="button" aria-expanded="false" aria-controls="collapseExample">
Contents
</a>
<br>

<br>
<% if @isarticle>=1 then %>

<table class="table table-bordered">
<tr>
<th>title</th>
<th>公開状況</th>
<th>更新日時</th>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            </th>
<th>いいね数</th>
<th> </th>
<th> </th>
</tr>
<% @s.each do |a| %>
<tr>
<% if a.title.size>20 %>
<td><%= a.title[0,20]+"..." %></td>
<% else %>
<td><%= a.title %></td>
<% end %>
<td>
<% if a.open==1 then%>
公開
<% else %>
非公開
<%end%>
</td>
<td><%= a.date %></td>
<td><%= a.good %></td> 
<form method="post" action="detail">
<td><input type="submit" value="Detail"></td>
<input type="hidden" name="id" value="<%= a.id %>">
</form>

<form method="post" action="edit">
<td><input type="submit" value="Edit"></td>
<input type="hidden" name="id" value="<%= a.id %>">
</form>

<form method="post" action="del">
<td><input type="submit" value="Delete" onclick="return deleteCheck();"></td>
<input type="hidden" name="id" value="<%= a.id %>">
<input type="hidden" name="_method" value="delete">
</form>
</tr>
<% end %>
</table>
<% else %>
<div class="row mx-2">
you have no article.
</div>
<% end %>

<br>
<a class="btn btn-link" data-toggle="collapse" href="/logout" role="button" aria-expanded="false" aria-controls="collapseExample">
Logout
</a>